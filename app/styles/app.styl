.dropdown
    position relative
    box-sizing border-box
    display inline-block
    ul
        overflow hidden
        opacity 0
        height 0
        position absolute
        padding-top 8px
        border-radius(5px)
        transition(opacity, 0.25s, linear)
        min-width 100%
        margin 0
        li
            background white  
        a
            display block
    li a
        padding 5px 10px
        &.activeLink
            display none
    &.active

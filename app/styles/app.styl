    .caret
        width 26px
        background rgba(0,0,0,0.05)
        border-left 1px solid transparent
        height 100%
        content "- "
        text-indent -1000px
        position absolute
        top 0
        right 0
        overflow hidden
        border-radius(0 5px 5px 0)
        &:after
            position absolute
            triangle(15px, 12px, 'bottom', rgba(0,0,0,0.1))
            content "- "
            text-indent -1000px
            overflow hidden
            top 13px 
            right 6px
    &:hover .caret
        cursor pointer
        &:after
            triangle(15px, 12px, 'bottom', rgba(0,0,0,0.3))

.paginate-simple
    float left
    width 100%
    margin-bottom 20px
    a
        display inline-block
        width 70px
        height 70px
        // lightBackground()
        border-radius(4px)
        background white
        border-bottom 2px solid rgba(0,0,0,0.15)
